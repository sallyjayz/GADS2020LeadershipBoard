<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:id="@+id/leaders_badge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/skill"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/learner_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Salama Nyela Jatau"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintStart_toEndOf="@+id/leaders_badge"
            android:layout_marginStart="150dp"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/learner_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="500 learning hours, Nigeria"
            android:paddingStart="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintStart_toEndOf="@+id/leaders_badge"
            android:layout_marginStart="150dp"
            app:layout_constraintTop_toBottomOf="@id/learner_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
